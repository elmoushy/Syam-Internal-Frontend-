# cat .env
# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/
VITE_FRONTEND_BASE_URL=http://localhost:5173
 
# Environment
VITE_ENVIRONMENT=development
VITE_DEBUG_MODE=false

# Authentication Mode: 'development' for email/password, 'ldap' for Active Directory
VITE_AUTH_MODE=development
# const IS_DEVELOPMENT = ENV_MODE === 'development'
# const IS_PRODUCTION = ENV_MODE === 'production'
# const IS_TEST = ENV_MODE === 'test'
 
# WebSocket Configuration (Chat Only)
VITE_WEBSOCKET_ENABLED=true
# WebSocket URL for chat - uses ws:// for localhost
VITE_WS_URL=ws://localhost:8000
 
# Security settings
VITE_MAX_LOGIN_ATTEMPTS=3
VITE_SHOW_SECURITY_WARNINGS=true
VITE_CLIENT_SIDE_VALIDATION=true

VITE_INPUT_MAX_LENGTHS={"title":255,"description":1000,"question":500,"option":200}